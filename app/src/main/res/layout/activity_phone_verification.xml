<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffe410"
    android:gravity="center_horizontal">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Phone\nNumeber\nVerification"
        android:textColor="#111"
        android:textSize="40sp"
        android:layout_marginBottom="40dp"
        android:textStyle="bold" />
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="An OTP message will be senton this Number"
        android:textColor="#111" />

    <EditText
        android:id="@+id/phoneNumberET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:layout_marginHorizontal="40dp"
        android:maxLength="10"
        android:layout_marginVertical="15dp"
        android:drawableStart="@drawable/ic_baseline_local_phone_24"
        android:background="@drawable/phone_verification_et_background"
        android:padding="10dp"
        android:drawableTint="#111"
        android:drawablePadding="15dp"
        android:inputType="phone"
        />

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/phoneVerificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#FFF"
        android:background="@drawable/round_border"
        android:textSize="20sp"
        android:onClick="sendOTP"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="15dp"
        app:spinning_bar_color="#fb743e"
        android:padding="10dp"
        />

</LinearLayout>